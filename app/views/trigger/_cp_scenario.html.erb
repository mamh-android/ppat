<article class="span12" id="performance">
<table id="performance_table" class="table table-bordered table-wuxia ">
    <thead>
        <tr>
            <th colspan="2">
                <div class="tabletitle">CP Power</div>
                <div><input type="checkbox" text="SelectAll" value="Select All" onclick="change_category_state(this)"/>SelectAll</div>
                Test loop: <input id="loopscenario" type="text" name="loopPPAT" value="3" class="testloop"/>
            </th>
        </tr>
    </thead>
    <tbody>
    <% @cp_cases.keys.each do |category| %>
        <tr>
            <td class="category">
                <input type="checkbox" id="<%= category %>_c" onclick="change_all_and_case_state(this)"/> <%= category %>
            </td>
            <td class="case">
                <% @cp_cases[category].each do |caseName| %>
                <div>
                    <input id="child" type="checkbox" value="<%= category %>" name="<%= caseName %>" class="<%= caseName %>" text="<%= caseName %>" href="#<%= caseName %>" onclick="change_all_and_category_state(this)"/>
                    <%= caseName %>
                </div>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</article>
