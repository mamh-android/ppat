<?xml version="1.0"?>

<project name="bt_on" basedir="." default="cleanup">
  	<include file="${user.dir}/config/command.xml"/>
    <target name="reboot" if="${reboot}" >
        <SerialPortCmd cmd="su"/>
        <echo message="reboot the device"/>
        <Reboot/>
    </target>

    <target name="prepare" depends="reboot">
        <SerialPortCmd cmd="su"/>
        <SerialPortCmd cmd="PATH=$PATH:/data/bin/"/>
    </target>

    <target name="run"  depends="prepare">
        <echo message="turn on wifi ..."/>
        <SerialPortCmd cmd="am start -a android.intent.action.MAIN -c android.intent.category.LAUNCHER -n com.marvell.ssv.pat/.PATEntryActivity -e method SET_BT_STATE --ez STATE true" />
        <sleep seconds="15"/>
        <PowerCtrlUSB flag="off"/>
        <echo message="turn off screen..."/>
        <SerialPortCmd cmd="input keyevent 26" />
        <sleep seconds="40"/>
    </target>

    <target name="power" depends="run">
        <echo message="Power monitor start to work ..."/>
        <MeasurePower server="${power_server}" sample_t="30" voltage="4" save_f="BT_On_${power_port}" port="${power_port}"/>
    </target>

    <target name="cleanup" depends="power">
        <echo message="start collect data ..."/>
        <sleep seconds="15"/>
        <PowerCtrlUSB flag="on"/>
        <sleep seconds="5"/>
        <PowerResult file_n="BT_On_${power_port}" server="${power_server}" stat_d="false"/>
        <copy file="${PT4_SERVER}/BT_On_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
        <ScreenOn/>
        <ScreenUnlock/>
        <SerialPortCmd cmd="am start -a android.intent.action.MAIN -c android.intent.category.LAUNCHER -n com.marvell.ssv.pat/.PATEntryActivity -e method SET_BT_STATE --ez STATE false" />
    </target>

</project>
