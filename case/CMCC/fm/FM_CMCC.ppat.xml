<?xml version="1.0"?>

<project name="power_fm_on" basedir="." default="cleanup">
  	<include file="${user.dir}/config/command.xml"/>
    <target name="reboot" if="${reboot}" >
        <SerialPortCmd cmd="su"/>
        <echo message="reboot the device"/>
        <Reboot/>
    </target>

    <target name="prepare" depends="reboot">
        <echo message="turn on wifi ..."/>
        <AdbCmd cmd="adb shell am instrument -w -e class com.marvell.test.wifi.WifiTest#turnOnWifi com.marvell.test.wifi/.WifiTestRunner" />
        <SerialPortCmd cmd="su"/>
        <SerialPortCmd cmd="PATH=$PATH:/data/bin/"/>
    </target>

    <target name="run"  depends="prepare">
        <echo message="turn on fm ..."/>
        <SerialPortCmd cmd="am start -a android.intent.action.MAIN  -n com.marvell.fmradio/.MainActivity" />
        <sleep seconds="30"/>

        <echo message="turn off screen..."/>
        <SerialPortCmd cmd="input keyevent 26" />
        <PowerCtrlUSB flag="off"/>
        <sleep seconds="10"/>
    </target>


    <target name="power" depends="run">
        <echo message="power monitor start work..."/>
        <MeasurePower server="${power_server}" sample_t="50" voltage="4" save_f="${case_name}_${power_port}" port="${power_port}"/>
    </target>
    <target name="result" depends="power">
        <sleep seconds="15"/>
        <PowerCtrlUSB flag="on"/>
        <echo message="start collecting duty cycle info..."/>

        <echo message="start collecting data..."/>
        <sleep seconds="5"/>
        <PowerResult file_n="${case_name}_${power_port}" server="${power_server}" stat_d="false"/>
        <copy file="${PT4_SERVER}/${case_name}_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
    </target>

    <target name="cleanup" depends="result">
        <ScreenOn/>
        <ScreenUnlock/>
        <SerialPortCmd cmd="busybox killall com.marvell.fmradio"/>
    </target>

</project>
