<?xml version="1.0"?>

<project name="power_wifi_browing" basedir="." default="run">
    <include file="${user.dir}/config/command.xml"/>
    <taskdef resource="net/sf/antcontrib/antcontrib.properties"/>
    <taskdef resource="net/sf/antcontrib/antlib.xml"/>
    <target name="run" if="${with_precondition}">
        <AdbCmd cmd="adb push resource/com.android.browser /data/data/com.android.browser"/>
        <AdbCmd cmd="adb push resource/event/${resolution}/to_bookmarks.evt.${os_version} /${storage}/to_bookmarks.evt"/>
        <AdbCmd cmd="adb push resource/event/${resolution}/browsing.evt.${os_version} /${storage}/browsing.evt"/>

        <UpdateEvent name="${input_device_name}"/>
        <AdbCmd cmd="adb shell busybox sed -i 's/event[0-9]/event${InputEvent}/g' /${storage}/*.evt"/>
    </target>
</project>
