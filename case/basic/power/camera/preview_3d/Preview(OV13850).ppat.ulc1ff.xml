<?xml version="1.0"?>

<project name="power_take_picture" basedir="." default="cleanup">
  	<include file="${user.dir}/config/command.xml"/>
    <target name="reboot" if="${reboot}" >
        <AdbCmd cmd="adb shell su"/>
        <echo message="reboot the device"/>
        <Reboot/>
    </target>

    <target name="prepare" depends="reboot">
        <sleep seconds="60"/>
        <AdbCmd cmd="adb shell logcat -c"/>
    </target>

    <target name="run"  depends="prepare">
        <AdbCmd cmd="adb shell setprop service.camera.auto.frameRate 0"/>
        <ReadThermal flag="thermal_start"/>
        <AdbCmd cmd="adb shell am start -n com.android.camera2/com.android.camera.CameraLauncher"/>
        <sleep seconds="10"/>
        <AdbCmd cmd="adb shell topicture"/>
        <sleep seconds="20"/>
        <echo message="start stat dc ..."/>
        <AdbCmd cmd="adb shell fix_focus"/>
        <StatDutyCycle state="1" type="adb"/>
        <PowerCtrlUSB flag="off"/>
    </target>

    <target name="power" depends="run">
        <echo message="start measure power ..."/>
        <MeasurePower server="${power_server}" sample_t="32" voltage="4" save_f="Preview(OV13850)_${power_port}" port="${power_port}"/>
    </target>
    <target name="result" depends="power">
        <echo message="start collecing data..."/>
        <PowerCtrlUSB flag="on"/>
        <StatDutyCycle state="0" type="adb"/>
        <sleep seconds="10"/>

        <ReadThermal flag="thermal_end"/>

        <ParseFPS cmd="adb logcat -d | grep 'preview fps'"/>
        <sleep seconds="30"/>

        <PowerResult file_n="Preview(OV13850)_${power_port}" server="${power_server}"/>
        <copy file="${PT4_SERVER}/Preview(OV13850)_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
        <AdbCmd cmd="adb shell input keyevent 4"/>
        <sleep seconds="10"/>
    </target>

    <target name="cleanup" depends="result">
        <AdbCmd cmd="adb shell input keyevent 4"/>
        <sleep seconds="1"/>
        <AdbCmd cmd="adb shell input keyevent 4"/>
        <sleep seconds="1"/>
        <AdbCmd cmd="adb shell input keyevent 4"/>
        <sleep seconds="1"/>
        <AdbCmd cmd="adb shell busybox killall com.android.camera2"/>
        <sleep seconds="10"/>
    </target>

</project>
