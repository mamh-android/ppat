<?xml version="1.0"?>

<project name="power_preview" basedir="." default="cleanup">
  	<include file="${user.dir}/config/command.xml"/>
    <target name="reboot" if="${reboot}" >
        <SerialPortCmd cmd="su"/>
        <echo message="reboot the device"/>
        <Reboot/>
    </target>

    <target name="prepare" depends="reboot">
        <PowerCtrlUSB flag="on"/>
        <SerialPortCmd cmd="su"/>
        <SerialPortCmd cmd="logcat -c"/>
         <sleep seconds="20"/>
    </target>

    <target name="run"  depends="prepare">
        <PowerCtrlUSB flag="off"/>
        <sleep seconds="60"/>
        <SerialPortCmd cmd="am start -n com.android.gallery3d/com.android.camera.CameraLauncher"/>
        <sleep seconds="10"/>
        <SerialPortCmd cmd="sendevent /${storage}/pre.evt"/>
        <sleep seconds="10"/>
        <echo message="mount ..."/>
        <StatDutycycle state="1"/>
    </target>

    <target name="power" depends="run">
        <MeasurePower server="${power_server}" sample_t="32" voltage="4" save_f="previews(LSI3H7)_${power_port}" port="${power_port}"/>
    </target>
    <target name="result" depends="power">
        <echo message="start collecing data..."/>
        <StatDutycycle state="0"/>
        <sleep seconds="2"/>

        <PowerCtrlUSB flag="on"/>
        <SerialPortCmd cmd="input keyevent 4"/>

        <SerialPortCmd cmd="logcat -d"/>
        <sleep seconds="30"/>

        <PowerResult file_n="previews(LSI3H7)_${power_port}" server="${power_server}"/>
        <copy file="${PT4_SERVER}/previews(LSI3H7)_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
        <sleep seconds="10"/>
    </target>

    <target name="cleanup" depends="result">
        <SerialPortCmd cmd="am force-stop com.android.gallery3d"/>
        <sleep seconds="10"/>
    </target>

</project>
