<?xml version="1.0"?>

<project name="power_menu_nav" basedir="." default="result">
  	<include file="${user.dir}/config/command.xml"/>
    <target name="reboot" if="${reboot}" >
        <echo message="reboot the device"/>
        <Reboot/>
    </target>
    <target name="run"  depends="reboot">
        <ReadThermal flag="thermal_start"/>
        <SerialPortCmd cmd="sendevent /${storage}/prepare_menu.evt &amp;" />
        <sleep seconds="35"/>
        <echo message="start menu nav.."/>
        <StatDutyCycle state="1"/>
        <PowerCtrlUSB flag="off"/>
        <SerialPortCmd cmd="sendevent /${storage}/play_menu.evt &amp;" />
    </target>

    <target name="power" depends="run">
        <echo message="power monitor start to work..."/>
        <MeasurePower server="${power_server}" sample_t="60" voltage="4" save_f="Menu_Navigation_${power_port}" port="${power_port}"/>
    </target>

    <target name="result" depends="power">
        <echo message="start collecing data..."/>
        <StatDutyCycle state="0"/>
        <sleep seconds="10"/>
        <PowerCtrlUSB flag="on"/>
        <ReadThermal flag="thermal_end"/>
        <sleep seconds="5"/>
        <PowerResult file_n="Menu_Navigation_${power_port}" server="${power_server}"/>
        <copy file="${PT4_SERVER}/Menu_Navigation_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
        <SerialPortCmd cmd="input keyevent 3"/>

        <sleep seconds="10"/>
    </target>

</project>
