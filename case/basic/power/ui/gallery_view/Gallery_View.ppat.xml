<?xml version="1.0"?>

<project name="${case_name}" basedir="." default="teardown">
<include file="${user.dir}/config/command.xml"/>
    <target name="prepare">
        <PowerCtrlUSB flag="on"/>
        <sleep seconds="5"/>
		<AdbCmd cmd="adb shell am start -a android.intent.action.MAIN -c android.intent.category.LAUNCHER -n com.marvell.ssv.pat/.PATEntryActivity -e method SET_GPS_STATE --ez STATE true"/>
        <ReadThermal flag="thermal_start"/>
        <echo message="enter gallery image folder..."/>
        <SerialPortCmd cmd="am start -n com.android.gallery3d/.app.GalleryActivity"/>
		<sleep seconds="10"/>
        <PowerCtrlUSB flag="off"/>
        <SerialPortCmd cmd="logcat -c"/>
        <StatDutycycle state="1"/>
    </target>
    <target name="run" depends="prepare">
        <MeasurePower server="${power_server}" sample_t="40" voltage="4" save_f="${case_name}_${power_port}" port="${power_port}" sleep="false"/>
        <sleep seconds="1"/>
        <echo message="enter image folder"/>
        <SerialPortCmd cmd="sendevent /${storage}/enter_img_folder.evt"/>
        <sleep seconds="5"/>
        <echo message="scroll to end of list"/>
        <SerialPortCmd cmd="sendevent /${storage}/to_end.evt"/>
        <sleep seconds="5"/>
        <echo message="scroll to start of list"/>
        <SerialPortCmd cmd="sendevent /${storage}/to_start.evt"/>
        <sleep seconds="5"/>
        <echo message="click the 1st image"/>
		<SerialPortCmd cmd="sendevent /${storage}/click_first.evt"/>
        <sleep seconds="5"/>
        <echo message="scroll"/>
        <SerialPortCmd cmd="sendevent /${storage}/flick_left.evt"/>
        <sleep seconds="8"/>
        <echo message="switch landscape..."/>
        <SerialPortCmd cmd="input rotationevent 1"/>
        <sleep seconds="2"/>
        <SerialPortCmd cmd="sendevent /${storage}/flick_up.evt"/>
        <sleep seconds="10"/>
    </target>
    <target name="teardown" depends="run">
        <echo message="start collecting duty cycle info..."/>
        <StatDutycycle state="0"/>
        <PowerCtrlUSB flag="on"/>
        <sleep seconds="5"/>
        <ReadThermal flag="thermal_end"/>
        <PowerResult server="${power_server}" file_n="${case_name}_${power_port}" />
        <copy file="${PT4_SERVER}/${case_name}_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
		<AdbCmd cmd="adb shell am start -a android.intent.action.MAIN -c android.intent.category.LAUNCHER -n com.marvell.ssv.pat/.PATEntryActivity -e method SET_GPS_STATE --ez STATE false"/>
	    <AdbCmd cmd="adb shell am force-stop com.android.gallery3d"/>
        <sleep seconds="10"/>
    </target>

</project>
