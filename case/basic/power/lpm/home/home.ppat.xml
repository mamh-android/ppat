<?xml version="1.0"?>

<project name="power_home_screen" basedir="." default="result">
  	<include file="${user.dir}/config/command.xml"/>
    <target name="reboot" if="${reboot}" >
        <SerialPortCmd cmd="su"/>
        <echo message="reboot the device"/>
        <Reboot/>
    </target>

    <target name="prepare" depends="reboot">
        <PowerCtrlUSB flag="on"/>
        <SerialPortCmd cmd="su"/>
        <SerialPortCmd cmd="logcat -c"/>
    </target>

    <target name="run"  depends="prepare">
        <echo message="go to home screen ..."/>
        <ReadThermal flag="thermal_start"/>
        <SerialPortCmd cmd="input keyevent 3" />
        <SystemProperty key="LPM" value="true"/>
        <PowerCtrlUSB flag="off"/>
        <sleep seconds="60"/>

        <echo message="start to stat dc ..."/>
        <StatDutyCycle state="1"/>
    </target>

    <target name="power" depends="run">
        <echo message="Power monitor start to work ..."/>
        <MeasurePower server="${power_server}" sample_t="120" voltage="4" save_f="home_${power_port}" port="${power_port}"/>
    </target>

    <target name="result" depends="power">
        <echo message="Power monitor start to work ..."/>
        <StatDutyCycle state="0"/>
        <sleep seconds="13"/>

        <echo message="start collecting data..."/>
        <PowerCtrlUSB flag="on"/>
        <ReadThermal flag="thermal_end"/>
        <sleep seconds="3"/>
        <PowerResult file_n="home_${power_port}" server="${power_server}"/>
        <copy file="${PT4_SERVER}/home_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
    </target>

</project>
