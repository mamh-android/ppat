<?xml version="1.0"?>

<project name="power_suspend" basedir="." default="cleanup">
  	<include file="${user.dir}/config/command.xml"/>
    <target name="reboot" if="${reboot}" >
        <SerialPortCmd cmd="su"/>
        <echo message="reboot the device"/>
        <Reboot/>
    </target>

    <target name="prepare" depends="reboot">
        <PowerCtrlUSB flag="off"/>
        <SerialPortCmd cmd="su"/>
    </target>

    <target name="run"  depends="prepare">
        <SerialPortCmd cmd="input keyevent 3"/>
        <sleep seconds="60"/>
        <echo message="go to home screen ..."/>
        <echo message="suspend device ..."/>
        <SerialPortCmd cmd="input keyevent 26" />
        <sleep seconds="60"/>
    </target>

    <target name="power" depends="run">
        <echo message="Power monitor start to work ..."/>
        <MeasurePower server="${power_server}" sample_t="60" voltage="4" save_f="Standby_${power_port}" port="${power_port}"/>
    </target>

    <target name="result" depends="power">
        <echo message="start collecting data..."/>
        <sleep seconds="15"/>
        <PowerCtrlUSB flag="on"/>
        <sleep seconds="5"/>
        <PowerResult file_n="Standby_${power_port}" server="${power_server}" stat_d="false"/>
        <copy file="${PT4_SERVER}/Standby_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
    </target>

    <target name="cleanup" depends="result">
        <ScreenOn/>
        <ScreenUnlock/>
    </target>
</project>
