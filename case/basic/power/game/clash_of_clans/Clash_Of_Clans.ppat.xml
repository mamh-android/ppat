<?xml version="1.0"?>

<project name="power_game_coc" basedir="." default="cleanup">
  	<include file="${user.dir}/config/command.xml"/>
    <taskdef resource="net/sf/antcontrib/antcontrib.properties"/>
    <taskdef resource="net/sf/antcontrib/antlib.xml"/>
    <target name="reboot" if="${reboot}" >
        <SerialPortCmd cmd="su"/>
        <echo message="reboot the device"/>
        <Reboot/>
    </target>

    <target name="prepare" depends="reboot">
        <SerialPortCmd cmd="logcat -c" />
        <echo message="turn on wifi ..."/>
        <SerialPortCmd cmd="am start -a android.intent.action.MAIN -c android.intent.category.LAUNCHER -n com.marvell.ssv.pat/.PATEntryActivity -e method SET_WIFI_STATE --ez STATE true" />
        <sleep seconds="10"/>
        <echo message="connect with AP ..."/>
        <SerialPortCmd cmd="am instrument -e ssid SE1_LT_1 -e pw ${VPN_WIFI_PWD} -w -e class com.marvell.test.wifi.WifiTest#connectAp com.marvell.test.wifi/.WifiTestRunner &amp;" />
        <sleep seconds="50"/>
        <AdbCmd cmd="adb shell am start -a android.intent.action.MAIN -c android.intent.category.LAUNCHER -n com.marvell.ssv.pat/.PATEntryActivity -e method SET_AIRPLANE_MODE --ez MODE true"/>
        <sleep seconds="20"/>
        <SerialPortCmd cmd="am start -a android.intent.action.MAIN -c android.intent.category.LAUNCHER -n com.marvell.ssv.pat/.PATEntryActivity -e method SET_WIFI_STATE --ez STATE true" />
        <sleep seconds="10"/>
    </target>

    <target name="run"  depends="prepare">
        <echo message="launch clash of clans ..."/>
        <ReadThermal flag="thermal_start"/>
        <SerialPortCmd cmd="am start -a android.intent.action.MAIN  -c android.intent.category.LAUNCHER -n com.supercell.clashofclans/.GameApp" />
        <sleep seconds="50"/>
        <echo message="launch clash of clans ..."/>
        <SerialPortCmd cmd="sendevent /${storage}/prepare_clash_of_clans.evt" />
        <sleep seconds="10"/>
        <!-- prepare to play ${case_name}-->

        <SerialPortCmd cmd="setprop marvell.graphics.print_fps 50"/>
        <SerialPortCmd cmd="logcat -s GC > /${storage}/gc.fps &amp;"/>
        <echo message="start stat dc..."/>
        <PowerCtrlUSB flag="off"/>
        <StatDutyCycle state="1"/>
    </target>

    <target name="power" depends="run">
        <echo message="Power monitor start to work ..."/>

        <MeasurePower server="${power_server}" sample_t="60" voltage="4" save_f="${case_name}_${power_port}" port="${power_port}" sleep="false"/>
        <!--start to play ${case_name}-->
        <SerialPortCmd cmd="sendevent /${storage}/play_clash_of_clans.evt" />
        <sleep seconds="60"/>
    </target>

    <target name="result" depends="power">
        <echo message="start collecting duty cycle info..."/>
        <StatDutyCycle state="0"/>
        <sleep seconds="15"/>


        <SerialPortCmd cmd="setprop marvell.graphics.print_fps 0"/>

        <PowerCtrlUSB flag="on"/>
        <ReadThermal flag="thermal_end"/>
        <sleep seconds="15"/>
        <ParseFPS cmd="adb shell cat /${storage}/gc.fps"/>
        <SerialPortCmd cmd="busybox killall logcat"/>
        <SerialPortCmd cmd="mv /${storage}/gc.fps /${storage}/gc.fps.bak"/>
        <PowerResult file_n="${case_name}_${power_port}" server="${power_server}"/>
        <copy file="${PT4_SERVER}/${case_name}_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
        <echo message="start collecing data..."/>
    </target>

    <target name="cleanup" depends="result">
        <SerialPortCmd cmd="am force-stop com.supercell.clashofclans" />
        <sleep seconds="10"/>
        <SerialPortCmd cmd="am start -a android.intent.action.MAIN -c android.intent.category.LAUNCHER -n com.marvell.ssv.pat/.PATEntryActivity -e method SET_WIFI_STATE --ez STATE false" />
        <sleep seconds="10"/>
    </target>

</project>
