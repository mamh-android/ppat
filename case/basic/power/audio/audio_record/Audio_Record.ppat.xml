<?xml version="1.0"?>

<project name="power_audio_record" basedir="." default="result">
  	<include file="${user.dir}/config/command.xml"/>
    <target name="reboot" if="${reboot}" >
        <SerialPortCmd cmd="su"/>
        <echo message="reboot the device"/>
        <Reboot/>
    </target>

    <target name="prepare" depends="reboot">
        <PowerCtrlUSB flag="on"/>
        <SerialPortCmd cmd="logcat -c"/>
    </target>

    <target name="run"  depends="prepare">
        <echo message="start audio record ..."/>
        <ReadThermal flag="thermal_start"/>
        <SerialPortCmd cmd="am start -n yuku.mp3recorder.full/yuku.perekammp3.RekamActivity" />
        <sleep seconds="10"/>
        <SerialPortCmd cmd="sendevent /${storage}/audio_record.evt"/>
        <sleep seconds="10"/>
        <echo message="turn off screen "/>
        <SerialPortCmd cmd="input keyevent 26"/>
        <sleep seconds="10"/>
        <echo message="mount ..."/>
        <PowerCtrlUSB flag="off"/>
        <StatDutycycle state="1"/>

    </target>

    <target name="power" depends="run">
        <echo message="Power monitor start to work ..."/>
        <MeasurePower server="${power_server}" sample_t="120" voltage="4" save_f="audio_record_${power_port}" port="${power_port}"/>
    </target>

    <target name="result" depends="power">
        <echo message="start collecting duty cycle info..."/>
        <StatDutycycle state="0"/>
        <sleep seconds="10"/>
        <PowerCtrlUSB flag="on"/>
        <ReadThermal flag="thermal_end"/>
        <sleep seconds="3"/>
        <ScreenOn/>
        <ScreenUnlock/>
        <PowerResult file_n="audio_record_${power_port}" server="${power_server}"/>
        <copy file="${PT4_SERVER}/audio_record_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
        <SerialPortCmd cmd="am force-stop yuku.mp3recorder.full"/>
        <sleep seconds="10"/>
    </target>

</project>
