<?xml version="1.0"?>

<project name="bt_conn" basedir="." default="cleanup">
  	<include file="${user.dir}/config/command.xml"/>
    <target name="reboot" if="${reboot}" >
        <SerialPortCmd cmd="su"/>
        <echo message="reboot the device"/>
        <Reboot/>
    </target>

    <target name="prepare" depends="reboot">
        <SerialPortCmd cmd="su"/>
    </target>

    <target name="run"  depends="prepare">
        <echo message="turn on wifi ..."/>
        <SerialPortCmd cmd="am start -a android.intent.action.MAIN -c android.intent.category.LAUNCHER -n com.marvell.ssv.pat/.PATEntryActivity -e method SET_BT_STATE --ez STATE true" />
        <sleep seconds="20"/>
        <SerialPortCmd cmd="am start com.android.settings/.Settings"/>
        <sleep seconds="2"/>
        <ParseLogcat checkString="Property Changed: Discoverable : true" ParseTag="BluetoothEventLoop" TempResultProperty="VISIABLE"/>
        <condition property="judgement">
            <equals arg1="${VISIABLE}" arg2="PASS"/>
        </condition>
    </target>
    <target name="res" unless="${judgement}" depends="run">
        <SerialPortCmd cmd="sendevent /${storage}/discoverbt.sh"/>
        <sleep seconds="10"/>
    </target>
    <target name="start" depends="res">
        <SerialPortCmd cmd="am instrument -e remoteDevice ${BT_DEVICE} -w -e class com.marvell.test.bluetooth.BluetoothTest#connectBluetooth com.marvell.test.bluetooth/.ParameterTestRunner"/>
        <sleep seconds="20"/>
        <echo message="turn off screen..."/>
        <SerialPortCmd cmd="input keyevent 26" />
        <PowerCtrlUSB flag="off"/>
        <sleep seconds="40"/>
    </target>

    <target name="power" depends="start">
        <echo message="Power monitor start to work ..."/>
        <MeasurePower server="${power_server}" sample_t="30" voltage="4" save_f="BT_Conn_${power_port}" port="${power_port}"/>
    </target>

    <target name="cleanup" depends="power">
        <sleep seconds="15"/>
        <echo message="start collect data ..."/>
        <PowerCtrlUSB flag="on"/>
        <sleep seconds="5"/>
        <PowerResult stat_d="false" file_n="BT_Conn_${power_port}" server="${power_server}"/>
        <copy file="${PT4_SERVER}/BT_Conn_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
        <ScreenOn/>
        <ScreenUnlock/>
        <SerialPortCmd cmd="am start -a android.intent.action.MAIN -c android.intent.category.LAUNCHER -n com.marvell.ssv.pat/.PATEntryActivity -e method SET_BT_STATE --ez STATE false" />
    </target>

</project>
