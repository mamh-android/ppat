<?xml version="1.0"?>

<project name="WiFi_conn" basedir="." default="cleanup">
  	<include file="${user.dir}/config/command.xml"/>
    <target name="reboot" if="${reboot}" >
        <SerialPortCmd cmd="su"/>
        <echo message="reboot the device"/>
        <Reboot/>
    </target>

    <target name="prepare" depends="reboot">
        <SerialPortCmd cmd="su"/>
    </target>

    <target name="run"  depends="prepare">
        <echo message="turn on wifi ..."/>
        <SerialPortCmd cmd="am instrument -w -e class com.marvell.test.wifi.WifiTest#turnOnWifi com.marvell.test.wifi/.WifiTestRunner" />
        <sleep seconds="20"/>
        <SerialPortCmd cmd="mlanutl wlan0 drvdbg 0x2003f" />
        <echo message="connect with AP ..."/>
        <SerialPortCmd cmd="am instrument -e ssid power_test -w -e class com.marvell.test.wifi.WifiTest#connectAp com.marvell.test.wifi/.WifiTestRunner &amp;" />

        <PowerCtrlUSB flag="off"/>
        <sleep seconds="30"/>
        <echo message="turn off screen..."/>
        <SerialPortCmd cmd="input keyevent 26" />
        <sleep seconds="40"/>
    </target>

    <target name="power" depends="run">
        <echo message="Power monitor start to work ..."/>
        <MeasurePower server="${power_server}" sample_t="30" voltage="4" save_f="WIFI_Conn_${power_port}" port="${power_port}"/>
    </target>

    <target name="cleanup" depends="power">
        <echo message="start collect data ..."/>
        <sleep seconds="15"/>
        <PowerCtrlUSB flag="on"/>
        <sleep seconds="5"/>
        <PowerResult file_n="WIFI_Conn_${power_port}" server="${power_server}" stat_d="false"/>
        <copy file="${PT4_SERVER}/WIFI_Conn_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
        <ScreenOn/>
        <ScreenUnlock/>
        <SerialPortCmd cmd="am instrument -w -e class com.marvell.test.wifi.WifiTest#turnOffWifi com.marvell.test.wifi/.WifiTestRunner" />
    </target>

</project>
