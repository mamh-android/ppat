<?xml version="1.0"?>

<project name="power_gl_bench" basedir="." default="result">
  	<include file="${user.dir}/config/command.xml"/>
    
    <target name="prepare">
        <PowerCtrlUSB flag="on"/>
        <SerialPortCmd cmd="logcat -c"/>
    </target>

    <target name="run"  depends="prepare">
        <echo message="start gl bench ..."/>
        <ReadThermal flag="thermal_start"/>
        <SerialPortCmd cmd="am start -n com.glbenchmark.glbenchmark27.corporate/net.kishonti.benchui.corporate.SplashScreenCorporate" />
        <sleep seconds="15"/>
        <SerialPortCmd cmd="sendevent /${storage}/select_battery.evt"/>
        <sleep seconds="90"/>
        <echo message="start stat dc ..."/>
        <PowerCtrlUSB flag="off"/>
        <StatDutycycle state="1"/>

    </target>

    <target name="power" depends="run">
        <echo message="Power monitor start to work ..."/>
        <MeasurePower server="${power_server}" sample_t="180" voltage="4" save_f="glbenchmark_${power_port}" port="${power_port}"/>
    </target>

    <target name="result" depends="power">
        <echo message="start collecting duty cycle info..."/>
        <StatDutycycle state="0"/>
        <sleep seconds="10"/>
        <PowerCtrlUSB flag="on"/>
        <ReadThermal flag="thermal_end"/>
        <sleep seconds="3"/>
        <PowerResult file_n="glbenchmark_${power_port}" server="${power_server}"/>
        <copy file="${PT4_SERVER}/glbenchmark_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
        <SerialPortCmd cmd="am force-stop com.glbenchmark.glbenchmark27.corporate"/>
        <sleep seconds="10"/>
    </target>

</project>
