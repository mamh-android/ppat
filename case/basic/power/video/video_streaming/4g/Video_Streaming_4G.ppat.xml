<?xml version="1.0"?>

<project name="power_wifi_browing" basedir="." default="result">
    <include file="${user.dir}/config/command.xml"/>
    
    <target name="prepare">
        <PowerCtrlUSB flag="on"/>
        <SerialPortCmd cmd="logcat -c"/>
        <echo message="turn on mobile network ..."/>
        <SerialPortCmd cmd="am start -a android.intent.action.MAIN -c android.intent.category.LAUNCHER -n com.marvell.ssv.pat/.PATEntryActivity -e method SET_AIRPLANE_MODE --ez MODE false" />
        <sleep seconds="20"/>
    </target>

    <target name="run"  depends="prepare">
        <echo message="start browsing ..."/>
        <SerialPortCmd cmd="am start -n com.youku.phone/com.youku.ui.activity.HomePageActivity"/>
        <ReadThermal flag="thermal_start"/>
        <sleep seconds="10"/>
        <SerialPortCmd cmd="sendevent /${storage}/select_samsung_stream.evt"/>
        <sleep seconds="10"/>
        <echo message="select HD"/>
        <SerialPortCmd cmd="sendevent /${storage}/select_HQ.evt"/>
        <echo message="start stat dc ..."/>
        <PowerCtrlUSB flag="off"/>
        <StatDutycycle state="1"/>

    </target>

    <target name="power" depends="run">
        <echo message="Power monitor start to work ..."/>
        <MeasurePower server="${power_server}" sample_t="60" voltage="4" save_f="wifi_browing_${power_port}" port="${power_port}"/>

    </target>

    <target name="result" depends="power">
        <echo message="start collecting duty cycle info..."/>
        <StatDutycycle state="0"/>
        <sleep seconds="10"/>
        <PowerCtrlUSB flag="on"/>
        <ReadThermal flag="thermal_end"/>
        <sleep seconds="3"/>
        <PowerResult file_n="wifi_browing_${power_port}" server="${power_server}"/>
        <copy file="${PT4_SERVER}/wifi_browing_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
        <sleep seconds="5"/>
        <SerialPortCmd cmd="am start -a android.intent.action.MAIN -c android.intent.category.LAUNCHER -n com.marvell.ssv.pat/.PATEntryActivity -e method SET_AIRPLANE_MODE --ez MODE true" />
        <SerialPortCmd cmd="am force-stop com.youku.phone"/>
        <sleep seconds="10"/>
    </target>

</project>
