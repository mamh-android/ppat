<?xml version="1.0"?>

<project name="power_video_high_resolution" basedir="." default="cleanup">
  	<include file="${user.dir}/config/command.xml"/>
    <target name="reboot" if="${reboot}" >
    </target>

    <target name="check" depends="reboot">
        <PowerCtrlUSB flag="on"/>
        <SerialPortCmd cmd="PATH=$PATH:/data/bin/"/>
        <SerialPortCmd cmd="su"/>

        <AdbCmd cmd="adb shell ls ${power_res_root}/${Stream}"/>
        <ParseConsole CheckString="${Stream}.*No such file or directory" TempResultProperty="CheckResource"/>
        <condition property="judgement">
            <equals arg1="${CheckResource}" arg2="PASS"/>
        </condition>
    </target>

    <target name="noNeedPrepare" if="${judgement}"  depends="check">
        <echo message="push stream to board"/>
        <AdbCmd cmd="adb push /PPAT_test/video/${Stream} ${power_res_root}/"/>
    </target>
    <target name="prepare" unless="${judgement}" depends="noNeedPrepare">
        <echo message="Not need to prepare video" />
    </target>
    <target name="run" depends="prepare">
        <SerialPortCmd cmd="logcat -c"/>
        <ReadThermal flag="thermal_start"/>
        <PowerCtrlUSB flag="off"/>
    </target>

    <target name="power" depends="run">
        <echo message="Power monitor start to work ..."/>
        <MeasurePower server="${power_server}" sample_t="${Duration}" voltage="4" save_f="1080p_${power_port}" port="${power_port}" sleep="false"/>
        <echo message="start play video...."/>
        <SerialPortCmd cmd="am start -a android.intent.action.VIEW  -n com.android.gallery3d/com.android.gallery3d.app.MovieActivity  -d ${power_res_root}/${Stream}"/>
        <sleep seconds="3"/>
        <SerialPortCmd cmd="input rotationevent 1"/>
        <echo message="rotate screen for video playback..."/>
        <sleep seconds="175"/>
        <SerialPortCmd cmd="am start -a android.intent.action.VIEW  -n com.android.gallery3d/com.android.gallery3d.app.MovieActivity  -d ${power_res_root}/${Stream}"/>
        <sleep seconds="3"/>
        <SerialPortCmd cmd="input rotationevent 1"/>
        <echo message="rotate screen for video playback..."/>
        <sleep seconds="175"/>
        </target>
    <target name="result" depends="power">
        <echo message="start collecting duty cycle info..."/>
        <sleep seconds="10"/>
        <PowerCtrlUSB flag="on"/>
        <ReadThermal flag="thermal_end"/>
        <echo message="start collecting data..."/>
        <PowerResult file_n="1080p_${power_port}" server="${power_server}"/>
        <copy file="${PT4_SERVER}/1080p_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
    </target>

    <target name="cleanup" depends="result">
        <SerialPortCmd cmd="busybox killall com.android.gallery3d"/>
        <sleep seconds="10"/>
    </target>
</project>
