<?xml version="1.0"?>

<project name="power_wifi_browing" basedir="." default="result">
    <include file="${user.dir}/config/command.xml"/>
    
    <target name="prepare">
        <PowerCtrlUSB flag="on"/>
        <SerialPortCmd cmd="logcat -c"/>    
    </target>

    <target name="run"  depends="prepare">
        <ReadThermal flag="thermal_start"/>      
        <echo message="start  file explorer ..."/>
        <SerialPortCmd cmd="am start -n com.estrongs.android.pop/.app.editor.PopNoteEditor -d /${storage}/test.txt" />
        <sleep seconds="15"/>  
        <echo message="start stat dc ..."/>
        <PowerCtrlUSB flag="off"/>
        <StatDutycycle state="1"/>
    </target>

    <target name="power" depends="run">
        <echo message="Power monitor start to work ..."/>
        <MeasurePower server="${power_server}" sample_t="330" voltage="4" save_f="${case_name}_${power_port}" port="${power_port}" sleep="false"/>
        <For intStart="0" intEnd="300" step="30" param="cur">
            <sequential>
                <SerialPortCmd cmd="uiautomator runtest scroll.jar -e count 1 -e sleep 1 -c com.uiat.ScrollUpDown" />
                <sleep seconds="10"/>
            </sequential>
        </For>
    </target>

    <target name="result" depends="power">
        <echo message="start collecting duty cycle info..."/>
        <StatDutycycle state="0"/>
        <sleep seconds="10"/>
        <PowerCtrlUSB flag="on"/>
        <ReadThermal flag="thermal_end"/>
        <sleep seconds="3"/>
        <PowerResult file_n="${case_name}_${power_port}" server="${power_server}"/>
        <copy file="${PT4_SERVER}/${case_name}_${power_port}.pt4" todir="${subcase_root}" failonerror="false"/>
        <sleep seconds="5"/>
        <SerialPortCmd cmd="am force-stop com.estrongs.android.pop"/>
        <sleep seconds="10"/>
    </target>

</project>
